@model IEnumerable<HotelBookingSystem.Models.HotelDetail>

<!--Displaying Hotels List by Seaching Hotel Category-->
<p>
    @using (Html.BeginForm())
    {      
        <div class="form-inline" id="search">
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
            <button type="submit" class="btn btn-search btn-info"><i class="fa fa-search"></i></button>
        </div>
    }
</p>
<table class="table">
    <tr>
        <th></th>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th></th>
    </tr>                
    @foreach (var item in Model)
    {
        <tr>        
            <td>
                <img src="@Url.Content(item.HotelImage)" class="img-rounded" alt="Responsive Image" width="200" height=" 200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelCategory.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelDescription)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.HotelId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }
</table>
