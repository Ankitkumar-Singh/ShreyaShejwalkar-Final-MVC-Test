@model IEnumerable<HotelBookingSystem.Models.BookingDetail>

<!--Displayng Reservation Token for Booked Hotels-->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive m-t-20 no-wrap">
                @using (Html.BeginForm("BookedHotels", "User", FormMethod.Post))
                {
                    <div class="list-group">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item active">Reservation Token</li>
                            <ul class="list-group">
                                <li class="list-group-item ">
                                    <div class="container" style="max-width:100%">
                                        <div class="row">
                                            <div class=" col-md-2">
                                                <img src="~/Assets/images/admin.png" class="img-thumbnail" alt="Responsive Image" width="100" height="100">
                                            </div>
                                            <div class=" col-md-10">
                                                <div style="color:#00b1b1;">
                                                    <b>
                                                        @Html.DisplayFor(modelItem => item.UserDetail.FirstName) @Html.DisplayFor(modelItem => item.UserDetail.LastName)
                                                    </b>
                                                </div><br />
                                                <div class="row">
                                                    <div class=" col-md-2">
                                                        <b> @Html.DisplayNameFor(model => model.BookDate)</b>
                                                        <b> @Html.DisplayNameFor(model => model.HotelDetail.HotelName)</b>
                                                        <b> @Html.DisplayNameFor(model => model.Rooms)</b>
                                                    </div>
                                                    <div class=" col-md-2">
                                                        @Html.DisplayFor(modelItem => item.BookDate)<br />
                                                        @Html.DisplayFor(modelItem => item.HotelDetail.HotelName)<br />
                                                        @Html.DisplayFor(modelItem => item.Rooms)<br />
                                                    </div>
                                                </div>
                                                @if (item.Status == "Book")
                                                {
                                                    <div class="backbtn">
                                                        @Html.ActionLink("Cancel Booking", "Edit", "User", new { id = item.BookId }, new { @class = "btn btn-danger" })
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="backbtn">
                                                        <div class="alert alert-success">
                                                            <strong>Request for Cancellation has been sent !! Please Wait</strong>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        }                       
                    </div>
                }
                </div>     
            </div>
        </div>
    </div>
</div>
