@model HotelBookingSystem.Models.BookingDetail

<!--Form to add new employee-->
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Book your hotel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
             <div class="form-group">
                <div class="control-label col-md-2">Hotel Name </div>
                <div class="col-md-10">
                    @Html.DropDownList("HotelId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.HotelId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">No.of Rooms </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Rooms, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rooms, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">Booking Date </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BookDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.BookDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Book" class="btn btn-info" />
                    @Html.ActionLink("Back to Hotel list", "Index", new object { }, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    }
</div>
